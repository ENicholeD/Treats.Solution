@using Treats.Models;
@model List<Treats.Models.Treat>;

<h1>Treat Selections</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, there are no treats at this time.</h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.Type}", "Info", new { id = treat.TreatId })</li>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>

<p>@Html.ActionLink("Back to Homepage", "Index", "Home")</p>