@model Treats.Models.Flavor

<h2>Edit</h2>

<h4>Edit this Flavor: @Html.DisplayFor(model => model.FlavorType)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.FlavorType)
    @Html.EditorFor(model => model.FlavorType)
    <hr/>

    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId")
    <hr/>

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavors", "Index")</p>