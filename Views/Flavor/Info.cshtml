<!-- Flavor -->
@using Treats.Models;
@model Treats.Models.Flavor;

<h2>Flavors</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorType):
  @Html.DisplayFor(model => model.FlavorType)</h3>

@if(@Model.Treats.Count > 0)
{
  <h4>Treats with this flavor:</h4>
  <ul>
  @foreach(var join in Model.AllTreats)
  {
    <li>@join.Treat.Type</li>
     @using (Html.BeginForm("DeleteTreat", "Flavor"))
    {
      @Html.Hidden("joinId", @join.TreatFlavorId)
      //arguments- variable to pass through and the actual value of that parameter
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
  
}
else
{
  <p>There are no treats with this flavor</p>
}
<p>@Html.ActionLink("Back to Flavors", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Add a Treat Selection", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("See all Treat Selections", "Index", "Treat")</p>
<p>@Html.ActionLink("Back to Homepage", "Index", "Home")</p>